
CC = gcc    # C-Compiler + Flags
CXX = g++   # C++-Compiler + Flags
CFLAGS = -O -Wall -g
CXXFLAGS = -g -std=c++17 -pedantic -Wall -Wextra
LD = g++	# Linker + Flags
LDFLAGS =

OBJECTS = sortier.o tab_io.o tab_sort.o
SRC = $(OBJECTS:%.o=%.cpp)
DEPENDFILE = .depend	# Abh채ngigkeitsdefinitionen
LOESCHLISTE = *.o *.exe *stackdump
RULES = make-regeln

### Ziele
all: dep main

# Bereinigung des Verzeichnisses
# @ vor dem Kommando sorgt daf체r, dass das Kommando selbst nicht
#   ausgegeben wird.
clean:
		@echo "Folgende Dateien werden geloescht"
		@echo $(LOESCHLISTE)
		rm -f $(LOESCHLISTE)

### Abhaengigkeiten
sortier: $(OBJECTS)

### Anlegen der Abh채ngigkeitsdatei
dep: $(SRC)
	$(CXX) -MM $(SRC) > $(DEPENDFILE)

### Inkludieren der Abh채ngigkeiten
-include $(DEPENDFILE)

### Inkludieren der Regeln
include $(RULES)


